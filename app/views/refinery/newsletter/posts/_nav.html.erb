<nav id="next_prev_article">
  <% if @post.next.present? -%>
    <%= link_to h(truncate(@post.next.title)) + " &#187;".html_safe,
                refinery.newsletter_post_path(@post.next),
                :class => 'next' %>
  <% end -%>

  <%= link_to t('newsletter_home', :scope => 'refinery.newsletter.posts.show'),
              refinery.newsletter_root_path,
              :class => 'home' %>

  <% if @post.prev.present? -%>
    <%= link_to "&#171; ".html_safe + h(truncate(@post.prev.title)),
                refinery.newsletter_post_path(@post.prev),
                :class => 'prev' %>
  <% end -%>
</nav><!-- /next_prev_article -->
